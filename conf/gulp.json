{
  "run": [],
  "clean": "public/**/*",
  "components": {
    "src": "src/*.coffee",  
    "dest": "public/js/"
  },
  "libs": {
    "src":  [
      "bower_components/angular/angular.js",
      "bower_components/fabric.js/dist/fabric.js",
      "bower_components/victor/build/victor.js"
    ],
    "dest": "public/js/"
  },
  "views": {
    "src": "src/index.jade",
    "dest": "public/"
  },
  "css": {
    "src": "src/assets/css/styles.sass",
    "dest": "public/css/"
  },
  "copy": {
    "bower_components/bootstrap-sass/assets/fonts/bootstrap/*": "public/fonts/"
  },
  "browserSync": {
    "server": "public/"
  }
}